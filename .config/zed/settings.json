// docs: https://zed.dev/docs/configuring-zed
// all default settings, run the `open default settings` command
{
  // "format_on_save": "off",
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "icon_theme": "Zed (Default)",
  "edit_predictions": {
    "disabled_globs": [".env"],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "preferred_completion_mode": "normal",
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-latest"
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-latest"
    },
    "version": "2"
  },

  "redact_private_values": false,

  "indent_guides": { "enabled": false },
  "theme": "Gruvbox Light Hard",
  "autosave": "on_focus_change",
  "buffer_line_height": "standard",
  "vim_mode": true,
  "ui_font_size": 13,
  "ui_font_family": "SauceCodePro Nerd Font Mono",
  "buffer_font_size": 13,
  "buffer__font_family": "SauceCodePro Nerd Font Mono",
  "load_direnv": "direct",
  "buffer_font_features": {
    "calt": false //turn off ligatures
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "toml": true,
    "terraform": true
  },
  "languages": {
    "Markdown": {
      "preferred_line_length": 80,
      "format_on_save": "off"
    },
    "SQL": {
      "formatter": "prettier"
    },
    "JSON": {
      "prettier": {
        "allowed": true,
        "parser": "json"
      }
    },
    "JavaScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on"
    }
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true,
      "delay_ms": 600
    }
  }
}
