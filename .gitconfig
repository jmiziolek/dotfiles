[user]
	name = Jakub Mizio≈Çek
	email = jakub.miziolek@contractors.roche.com
[http]
	postBuffer = 524288000
	sslVerify = false
[alias]
  st = status
  ci = commit
  br = branch
  df = diff
  lg = log -p
  st = status -sb
  ci = commit
  co = checkout
  cb = checkout -b
  dc = diff --cached
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only 
  noff = merge --no-ff
  pom = push origin master
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  lol = log --oneline --graph --all --decorate
  l = log --graph --pretty="tformat:%C(yellow)%h%Creset\\ %Cgreen(%ar)%Creset\\ %C(cyan)<%an>%Creset\\ %C(magenta)%d%Creset\\ %s"
[url "https://"]
	insteadOf = git://
[core]
	excludesfile = ~/.gitignore
