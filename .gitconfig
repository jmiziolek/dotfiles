[user]
	name = Jakub Miziolek
[http]
	postBuffer = 524288000
	sslVerify = false
[alias]
	st = status
	ci = commit
	br = branch
	df = diff
	lg = log -p
	st = status -sb
	ci = commit
	co = checkout
	cb = checkout -b
	dc = diff --cached
	aa = add --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	ds = diff --stat=160,120
	dh = diff HEAD~1
	dsf = "!git diff --color $@ | diff-so-fancy"
	lol = log --oneline --graph --all --decorate
	l = log --graph --pretty="tformat:%C(yellow)%h%Creset\\ %Cgreen(%ar)%Creset\\ %C(cyan)<%an>%Creset\\ %C(magenta)%d%Creset\\ %s"
	branches = branch -a
	remotes = remote -v
	la = shortlog -s -n
	d = difftool
	sshow = "!f() { git stash show stash^{/$*} -p; }; f"
	sapply = "!f() { git stash apply stash^{/$*}; }; f"
[url "https://"]
	insteadOf = git://
[core]
	excludesfile = /Users/jakub/.gitignore
	autocrlf = input
	editor = nvim
[merge]
	tool = vimdiff
	conflictstyle = diff3
[difftool]
	prompt = false
	trustExitCode = true
[filter "lfs"]
	required = true
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	clean = git-lfs clean -- %f
[push]
	default = current
	followTags = true
[commit]
	template = /Users/jakub/.stCommitMsg
