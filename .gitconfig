[user]
	name = Jakub Mizio≈Çek
	email = mail@jakubmiziolek.pl
[http]
	postBuffer = 524288000
	sslVerify = false
[alias]
	st = status
	ci = commit
	br = branch
	df = diff
	lg = log -p
	st = status -sb
	ci = commit
	co = checkout
	cb = checkout -b
	dc = diff --cached
	aa = add --all
	ff = merge --ff-only
	pullff = pull --ff-only 
	noff = merge --no-ff
	ds = diff --stat=160,120
	dh1 = diff HEAD~1
	lol = log --oneline --graph --all --decorate
	l = log --graph --pretty="tformat:%C(yellow)%h%Creset\\ %Cgreen(%ar)%Creset\\ %C(cyan)<%an>%Creset\\ %C(magenta)%d%Creset\\ %s"
	branches = branch -a
	remotes = remote -v
	la = shortlog -s -n
	d = difftool
[url "https://"]
	insteadOf = git://
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[diff]
	tool = vimdiff
	algorithm = patience
[merge]
	tool = vimdiff
	conflictstyle = diff3
[difftool]
	prompt = false
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
