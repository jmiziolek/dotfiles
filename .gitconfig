[user]
	name = Jakub Miziolek
	email = jmiziolek@users.noreply.github.com
[http]
	postBuffer = 524288000
	sslVerify = false
[alias]
	st = status
	ci = commit
	br = branch
	df = diff
	lg = log -p
	st = status -sb
	ci = commit
	co = checkout
	cb = checkout -b
	dc = diff --cached
	aa = add --all
	ff = merge --ff-only
	tt = describe --abbrev=0 --tags
	pullff = pull --ff-only
	noff = merge --no-ff
	ds = diff --stat=160,120
	dh = diff HEAD~1
	dsf = "!git diff --color $@ | diff-so-fancy"
	l = log --graph --pretty="tformat:%C(yellow)%h%Creset\\ %Cgreen(%ar)%Creset\\ %C(cyan)<%an>%Creset\\ %C(magenta)%d%Creset\\ %s"
	branches = branch -a
	remotes = remote -v
	la = shortlog -s -n
	d = difftool
	sshow = "!f() { git stash show stash^{/$*} -p; }; f"
	sapply = "!f() { git stash apply stash^{/$*}; }; f"
	sync= !git fetch --all --prune && git rebase -p --autostash <user_input>
	identity= ! git config user.name "$(git config user.$1.name)"; git config user.email "$(git config user.$1.email)"; git config user.signingkey "$(git config user.$1.signingkey)"; : https://www.micah.soy/posts/setting-up-git-identities/
  # *********************
  # Rebase workflow
	mainbranch = "!git remote show origin | sed -n '/HEAD branch/s/.*: //p'"
	synced = "!git pull origin $(git mainbranch) --rebase"
	update = "!git pull origin $(git rev-parse --abbrev-ref HEAD) --rebase"
	squash = "!git rebase -v -i $(git mainbranch)"
	publish = push origin HEAD --force-with-lease
	pub = publish
[url "https://"]
	insteadOf = git://
[core]
	excludesfile = /Users/jakubmiziolek/.gitignore_global
	autocrlf = input
	editor = nvim
	pager = delta

[diff]
    colorMoved = default
[merge]
	tool = vimdiff
	conflictstyle = diff3
[difftool]
	prompt = false
	trustExitCode = true
[filter "lfs"]
	required = true
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	clean = git-lfs clean -- %f
[push]
	default = current
	followTags = true
[pull]
	rebase = false
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
